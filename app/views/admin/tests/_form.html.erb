<%= form_with model: [:admin, @test], local: true, class: "" do |form| %>

<%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, id: :test_title, class: "form-control"%>
  </p>

  <p>
    <%= form.label :level, class: "form-label" %>
    <%= form.number_field :level,  id: :test_level, class: "form-control" %>
  </p>

  <p>
    <%= form.label :active, class: "form-label" %>
    <%= form.select(:active, options_for_select([['Yes', true], ['No', false]], selected: @test.active), {}, { class: 'form-select' })%>
  </p>

  <p>
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {}, {class: 'form-select'} %>
  </p>

  <p>
    <%= form.label :time, class: "form-label" %>
    <%= form.number_field :time,  id: :test_time, class: "form-control" %>
  </p>

  <p> <%= form.submit("Сохранить", class: "btn btn-primary") %> </p>
<% end %>
